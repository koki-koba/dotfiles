nnoremap :tree :NERDTreeToggle
NeoBundle 'neoclide/coc.nvim'
" You can specify revision/branch/tag.
NeoBundle 'Shougo/vimshell', { 'rev' : '3787e5' }

" Required:
call neobundle#end()

" Required:
filetype plugin indent on

